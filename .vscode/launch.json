{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node-terminal",
        "name": "Next.js: Debug Server-side",
        "request": "launch",
        "command": "npm run dev",
        "serverReadyAction": {
          "action": "debugWithChrome",
          "pattern": "started server on url (?<url>http://.+:(?<port>\\d+))",
          "webRoot": "llama-forms/${workspaceFolder}"
        }
      }
    ]
  }